$------------------------------------------------------------------------
PHYSICAL_PROBLEM
  PROBLEM_DEFINITION
    TEMPORAL_DERIVATIVES:   Off
    CONVECTIVE_TERM:        Off
    CONDUCTION_TERM:        On
  END_PROBLEM_DEFINITION
END_PHYSICAL_PROBLEM
$------------------------------------------------------------------------
NUMERICAL_TREATMENT
  STABILIZATION:           ASGS
  ELEMENT_LENGTH:          Minimum 
  SAFETY_FACTOR=           50.0
  STEADY_STATE_TOLERANCE=  1e-10  
  MAXIMUM_NUMBER_OF_ITER=  1
  RELAXATION_FACTOR=       1.0
  CONVERGENCE_TOLERANCE=   1e-03
  ALGEBRAIC_SOLVER     
    SOLVER:                GMRES
    CONVERGENCE:           ITERA=1000, TOLER=1.0e-12
    OUTPUT:                CONVERGENCE
    OPTION:                FIXITY
  END_ALGEBRAIC_SOLVER  
END_NUMERICAL_TREATMENT
$------------------------------------------------------------------------
OUTPUT_&_POST_PROCESS
  POSTPROCESS TEMPER,      STEPS = 1e6
  OUTPUT      ERROR,       SOLUTION=3
END_OUTPUT_&_POST_PROCESS
$------------------------------------------------------------------------
BOUNDARY_CONDITIONS, NON_CONSTANT
  CODES, NODES
      1  1 1.0, SPACE_&_TIME_FUNCION=LINEAR
  1 & 3  1 1.0, SPACE_&_TIME_FUNCION=LINEAR
$      3  1 1.0
  END_CODES
END_BOUNDARY_CONDITIONS
$------------------------------------------------------------------------
